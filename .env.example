# Stock Tracking DC - Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =======================
# Application Settings
# =======================
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =======================
# Database (MySQL)
# =======================
MYSQL_DATABASE=stock_tracking_db
MYSQL_USER=stock_user
MYSQL_PASSWORD=change-this-password
MYSQL_ROOT_PASSWORD=change-this-root-password
MYSQL_HOST=db
MYSQL_PORT=3306

# Alternative: Use DATABASE_URL for connection string
# DATABASE_URL=mysql://stock_user:password@db:3306/stock_tracking_db

# =======================
# Redis (Cache & Celery)
# =======================
REDIS_URL=redis://redis:6379/0

# =======================
# Gunicorn (Production)
# =======================
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info

# =======================
# Email Configuration
# =======================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Alternative: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# =======================
# Cloudinary (Optional)
# =======================
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# =======================
# Frontend (React/Vite)
# =======================
VITE_API_URL=http://localhost:8000/api/v1
NODE_ENV=development

# =======================
# Security (Production)
# =======================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Set these to True in production with HTTPS
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# =======================
# Sentry (Optional - Error Tracking)
# =======================
# SENTRY_DSN=your-sentry-dsn-here

# =======================
# Railway/Production URLs
# =======================
# ALLOWED_HOSTS=your-app.railway.app
# CORS_ALLOWED_ORIGINS=https://your-frontend.railway.app
